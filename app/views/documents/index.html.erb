<% if @documents.size == 0 %>
  No templates yet
<% end %>

<table class="table m-t-20">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Customer</th>
      <th scope="col">Designer</th>
      <th scope="col">Designer Email</th>
      <th scope="col">Date</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |doc| %>
      <tr>
        <th scope="row"> <%= doc.id %> </th>
        <td> <%= doc.customer_name %> </td>
        <td> <%= doc.designer_name %> </td>
        <td> <%= doc.designer_email %> </td>
        <td> <%= doc.date %> </td>
        <td> <%= link_to "View", document_path(doc), target: "_blank", :class => "btn btn-xs btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>